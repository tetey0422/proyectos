            // Por defecto, todos los horarios están disponibles
            // TODO: Tu compañero modificará esto para verificar contra la base de datos
            horariosDelDia.Add(new HorarioDisponible
            {
                Hora = horaActual,
                Disponible = true // Siempre disponible hasta conectar con BD
            });

            horaActual = horaActual.Add(intervalo);
        }
    }

    private void SeleccionarHora(HorarioDisponible horario)
